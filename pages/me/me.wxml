<view class='content'>
  <view class='nav'>
    <view class='top'>
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view class='nickname'>
      <open-data type="userNickName"></open-data> 
    </view>
  </view>
    <view class='item'>
      <text class='left'>学号：</text><text class='right'>{{myinfo.sno}}</text>
    </view>
    <view class='item'>
      <text class='left'>姓名：</text><text class='right'>{{myinfo.name}}</text>
    </view>
    <view class='item'>
     <text class='left'> 班级：</text><text class='right'>{{myinfo.class}}</text>
    </view>
    <view class='item'>
      <text class='left'>系部：</text><text class='right'>{{myinfo.prof}}</text>
    </view>
    <view class='item' bindtap='setemail'>
    <text class='left'>出生年月：</text><text class="right">{{myinfo.birth}}</text>
    </view>
    <view class='item' bindtap='resetpwd'>
     <text class='left'> 级别：</text><text class='right'>{{myinfo.grade}}</text>
    </view>
    <view class='item' bindtap='exit'>
      <text class='left'>退出：</text><text class='right'>>>></text>
    </view>
  
</view>